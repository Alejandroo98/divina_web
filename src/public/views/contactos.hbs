<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x'
      crossorigin='anonymous'
    />
    <link rel="stylesheet" href="../css/contactos.css">
    <link rel="stylesheet" href="../css/footer.css">
    <title>Document</title>
  </head>
  <body>
    {{> nav }}
    <section class="__mesajeContainer ">

      

    {{#if success}}
      <div class="succes">
        <p>{{success}}</p>
      </div>
    {{/if}}
      
    {{#if err}}
      <div class="error">
        <p>{{ err }}</p>
      </div>
    {{/if}}

   

    
    </section>
     <main class="__mainContainer">
        <section class="__contentContainer">
          <div class="inputsForm">
            <div>
              <h4>Envia un mensaje</h4>
            </div>
              <div>
                <form method="POST">
                  <div>
                    <label for="name">Nombres</label>
                    <input type="text" name="nombres">
                  </div>
                  <div>
                    <label for="email">Email</label>
                    <input type="email" name="email" >
                  </div>
                  <div>
                    <label for="mensaje">Mensaje</label>
                    <textarea name="mensaje" id="mensaje" cols="30" rows="5"></textarea>
                  </div>
                  <div align="center" class="botonContacto" >
                    <button type="submit">Enviar mensaje</button>
                  </div>
                </form>
              </div>
            </div>
            <div class="nameForm" >
              <h1>INFORMACION <br> DE CONTACTO </h1>
              <p>info@divinaec.com</p>
              <p>0989131502 </p>
            </div>
        </section>
    {{> footer }}
    </main>

      
  </body>
</html>