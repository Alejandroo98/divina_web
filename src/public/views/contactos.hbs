<html lang='es'>

<head>
  <meta charset='UTF-8' />
  <meta http-equiv='X-UA-Compatible' content='IE=edge' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet'
    integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous' />
  <link rel="icon" type="image/png" href="../img/iconRojo.png">
  <link rel="stylesheet" href="../css/contactos.css">
  <link rel="stylesheet" href="../css/footer.css">
  <link rel="stylesheet" href="../css/Responsive/contactos.css">
  <title>Cera depilatoria | Contactos | Divina</title>
  <meta name="description"
    content="Cera depilatoria facial y corporal. Cera depilatoria con carbón activado, aloe vera y a base de mieles.">
  <meta name="keywords"
    content="cera depilatoria, cera facial, cera corporal, cera con aloe vera, cera depilatoria quito">
  <meta property="og:site_name" content="Contactos | Divina" />
</head>

<body>
  {{> nav }}
  <section class="__mesajeContainer ">



    {{#if success}}
    <div class="succes">
      <p>{{success}}</p>
    </div>
    {{/if}}

    {{#if err}}
    <div class="error">
      <p>{{ err }}</p>
    </div>
    {{/if}}




  </section>
  <main class="__mainContainer">
    <section class="__contentContainer">

      <div class="inputsForm">

        <div>
          <h4>Envia un mensaje</h4>
        </div>

        <div>

          <form method="POST">
            <div>
              <label for="name">Nombres</label>
              <input type="text" name="nombres">
            </div>

            <div>
              <label for="email">Email</label>
              <input type="email" name="email">
            </div>

            <div>
              <label for="mensaje">Mensaje</label>
              <textarea name="mensaje" id="mensaje" cols="30" rows="5"></textarea>
            </div>

            <div align="center" class="botonContacto">
              <button type="submit">Enviar mensaje</button>
            </div>

          </form>


        </div>

      </div>

      <div class="nameForm">
        <h1>INFORMACIÓN <br class="br"> DE CONTACTO </h1>
        <p><b>Email:</b> info@divinaec.com</p>
        <p> <b>Tlf:</b> 0989131502 </p>
      </div>

    </section>

    {{> footer }}

  </main>

  <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js'
    integrity='sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4'
    crossorigin='anonymous'></script>

</body>

</html>