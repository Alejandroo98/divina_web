<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Document</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='../css/admin.css' />
  </head>
  <body>

    <nav>
      <div class='flexNav'>
        <div>
          <a href='/'>
            <img src='../img/logo_Mesa de trabajo 1.svg' width='100' alt='Logo-Divina' />
          </a>
        </div>
        <div>
          <a href='/'>Home</a>
        </div>
        <div>
          <a href='/contactos'>Contactos</a>
        </div>
      </div>
      <div>
        <a href='/logout'>Cerrar Sesion</a>
      </div>
    </nav>

    <main class='__mainMails'>
      <section class='__tableEmails'>
        <div class='nameEmails'>
          <div>
            <p>
              Nombres
            </p>
          </div>
          <div>
            <p>
              Emails
            </p>
          </div>
          <div>
            <p>
              Mensaje
            </p>
          </div>
          <div>
            <p>
              Hora envio
            </p>
          </div>
        </div>
        <div class='conentEmails'>
          {{#each emails}}
            <div class='flexEmail'>
              <div>{{nombres}}</div>
              <div>{{email}}</div>
              <div class='mensajeEmail'>{{mensaje}}</div>
              <div> {{fechaMensaje}} </div>
              <div><a href='/delete/{{_id}}'>Eliminar Email</a></div>
            </div>
          {{/each}}
        </div>
      </section>
    </main>

  </body>
</html>